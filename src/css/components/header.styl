#header
	// position fixed
	position relative
	top 0
	left 0
	width 100%
	z-index 50

.header-logo
	font-size 22px
	color black
	text-decoration none
	font-weight 700

.header-inner
	display flex
	flex-wrap wrap
	justify-content space-between
	align-items center
	height var(--header-height-desktop)
	position relative

.header-nav
	padding 20px 10px
	li:not(:last-child)
		a:before
			content ''
			position absolute
			bottom 0
			left 10px
			right 10px
			height 1px
			background #ccc
			z-index -2
	a
		display block
		padding 12px 10px
		text-decoration none
		color black
		position relative
		transition .3s all ease
		border-radius 10px
		&:after
			content ''
			position absolute
			top 0
			bottom 0
			left 0
			right 0
			background black
			border-radius 10px
			transition .3s all ease
			opacity 0
			z-index -1
		&:hover
			color white
			&:after
				opacity 1

.header-buttons
	display grid
	grid-template-columns 1fr 1fr
	grid-gap 12px

.header-button
	border-radius 28px
	square(50px)
	display block
	box-sizing content-box
	border 2px solid black
	transition .3s all var(--ease-quart)
	position relative
	background white

	svg
		display block

.burger-menu-wrapper
	position absolute
	transition .3s all var(--ease-quart)
	right 0
	overflow hidden

	&.is-active
		border-radius 25px
		box-shadow 4px 4px 0 0 black
		width 250px
		height 300px
		.burger-menu
			background var(--red)
			transform scale(.5)
		.bar
			&:first-child
				transform rotate(45deg) translate(3px, -3px)
			&:nth-child(2)
				opacity 0
			&:last-child
				transform rotate(-45deg) translate(5px, -5px)

.burger-menu
	margin-left auto
	display flex
	flex-wrap wrap
	align-items center
	justify-content center
	square(50px)
	border-radius 50%
	padding 14px
	box-sizing border-box
	cursor pointer
	transition .3s all var(--ease-quart)
	.bar
		width 100%
		height 3px
		border-radius 5px
		background black
		transition .3s all var(--ease-quart)
		&:first-child
			transform-origin top left

// responsive
+below(md)
	.header-logo
		font-size 20px
	.header-buttons
		grid-gap 8px
	.header-button, .burger-menu
		square(40px)
	.burger-menu
		padding 10px
	.header-inner
		height var(--header-height-mobile)

+above(md)
	.header-button
		&:hover:not(:active)
			translate -3px -3px
			box-shadow 3px 3px 0 0 black
