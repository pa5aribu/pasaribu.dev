#header
	position fixed
	top 0
	left 0
	width 100%

.header-logo
	font-size 22px
	color black
	text-decoration none

.header-nav
	display flex
	flex-wrap wrap
	justify-content space-between
	align-items center
	height var(--header-height-desktop)

.burger-menu
	width 50px
	height 50px
	padding 12px
	background white
	border-radius 50%
	display flex
	align-items center
	border 2px solid black
	box-shadow 3px 3px 0 0 black
	svg
		display block
		width 100%
