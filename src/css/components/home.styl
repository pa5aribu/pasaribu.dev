	text-align center

	.content-wrapper
		padding-top var(--header-height-desktop)
		height 100vh
		display flex
		flex-wrap wrap
		> *
			width 100%

	.content
		margin-top auto

	.intro-title
		font-size 80px
		margin-bottom 10px
	.intro-description
