.overlay
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background #bb7a6e
	z-index	60
	display grid
	text-align center	
	align-items center
	color white
	font-size 40px

body
	color black
	background #bb7a6e
	transition .3s background ease
	font-family var(--font-body)
	font-weight 300
	position fixed
	letter-spacing -.75px
	top 0
	left 0
	width 100%
	overflow hidden // disable scroll on safari
	fixVH()

main
	fixVH()
	position relative
	display grid
	grid-auto-rows 100px auto 45%
	background white
	padding 15px
	// border 15px solid white

	&:before
		content ''
		position absolute
		absolute(15px)
		overflow hidden
		background-color var(--peach)
		border-radius 15px

	.sections-wrapper
		width 100%
		margin auto
		position relative

	.canvas-wrapper-wrapper
		text-align center
		width 100%

	+below(800px, true)
		display flex
		// flex-wrap wrap
		flex-direction column

		.canvas-wrapper-wrapper
			display grid

.button
	border 2px solid black
	transition .3s all var(--ease-quart)
	position relative
	display inline-block
	background white
	border-radius 30px
	padding 14.5px 30px
	font-size 18px
	&:hover
		translate -3px -3px
		box-shadow 3px 3px 0 0 black

.is-hidden
	display none

// responsive
+below(md)
	.overlay
		font-size 30px
