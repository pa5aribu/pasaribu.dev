							.bar
							.bar
							.bar
						ul.header-nav
							li
								a(href="") About
							li
								a(href="") Work
							li
								a(href="") Contact

		section#intro
			.content-wrapper
				.content
					.container
						.intro-title #{name}
						.intro-description I'm a Creative Developer and
							| <br>Motion Designer from Indonesia
				.canvas-wrapper
					canvas#main-canvas(width="750" height="500")

		section#about

		script(type="module", src="./../js/app.js")
