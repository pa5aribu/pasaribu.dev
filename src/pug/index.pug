html(lang="en")

	head
		title #{name}
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="stylesheet" href="./../css/styles.styl")
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Anton&family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">

	body.no-cursor

		include components/icons

		.cursor.is-dar(style="visibility: hidden")
			include components/cursor

		main#app

			.sections-indicator
				.section-indicator.is-pointer.is-active intro
				.section-indicator.is-pointer about
				.section-indicator.is-pointer work
				.section-indicator.is-pointer contact

			header#header
				.container-fluid
					.header-inner
						a.header-logo(href="#") Pasaribu.xyz
						.header-buttons
							.customize-button.header-button.is-pointer
								svg(viewBox="0 0 50 50")
									use(href="#customize")
							.burger-menu-wrapper.header-button
								.burger-menu.is-pointer
									.bar
									.bar
									.bar
								ul.header-nav
									li
										a(href="") About
									li
										a(href="") Work
									li
										a(href="") Contact

			.sections-wrapper
				section#intro.is-hidde
					.container
						.content
							.intro-title #{name}
							.intro-description Creative Dev and Motion Designer
				section#about.is-hidden
					.container
						.content
							.section-title who am i?
							.section-description
								p
									| I'm a senior front-end developer with passion for motion design.<br>
									| I've worked with a startup, freelance jobs, and an agency.
								p My current stack: CSS, JS, GSAP, Three.js, Figma and Rive
							.button-wrapper.is-hidden
								.button.is-pointer Download Resume

			.canvas-wrapper-wrapper
				.canvas-wrapper
					canvas#bhakti(width="800" height="600")
					a.resume-wrapper(href="#resume")
						canvas#resume.is-pointer(width="280" height="220")
					canvas#books(width="300" height="250")

		script(type="module", src="./../js/app.js")
